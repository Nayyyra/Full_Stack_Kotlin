<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/greyBackgrounds">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.example.ui.Main_Activity2">

        <TextView
            android:id="@+id/textMasDetalles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Más detalles"
            android:textColor="@android:color/black"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- CardView del pronóstico -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardForecast"
            android:layout_width="346dp"
            android:layout_height="261dp"
            android:layout_marginTop="70dp"
            app:cardBackgroundColor="@color/blueBackgrounds"
            app:cardCornerRadius="30dp"
            app:cardElevation="8dp"
            app:layout_constraintTop_toBottomOf="@id/textMasDetalles"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Para poder hacer scroll dentro de la cardView -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Título -->
                    <TextView
                        android:id="@+id/pronostico5dias"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Pronóstico 5 días"
                        android:textColor="@android:color/white"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <!-- Día 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageDia1"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/sol" />

                        <TextView
                            android:id="@+id/textDia1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Día 1"
                            android:textColor="@android:color/white"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <!-- Día 2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageDia2"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/sol" />

                        <TextView
                            android:id="@+id/textDia2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Día 2"
                            android:textColor="@android:color/white"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <!-- Día 3 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageDia3"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/sol" />

                        <TextView
                            android:id="@+id/textDia3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Día 3"
                            android:textColor="@android:color/white"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <!-- Día 4 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageDia4"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/sol" />

                        <TextView
                            android:id="@+id/textDia4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Día 4"
                            android:textColor="@android:color/white"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <!-- Día 5 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageDia5"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/sol" />

                        <TextView
                            android:id="@+id/textDia5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Día 5"
                            android:textColor="@android:color/white"
                            android:textSize="18sp" />
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>

        </androidx.cardview.widget.CardView>

        <!-- CardView ciudades favoritas -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardFavCities"
            android:layout_width="350dp"
            android:layout_height="245dp"
            android:layout_marginTop="50dp"
            app:cardBackgroundColor="#FBF4F4"
            app:cardCornerRadius="30dp"
            app:cardElevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/searchView">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/textFavCities"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Tus ciudades favoritas"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/textFavCities2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="35dp"
                    android:text="Hecha un vistazo a tus ciudades guardadas"
                    android:textColor="#A9A9A9"
                    android:textSize="15sp" />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/miniFotoCiudad"
                android:layout_width="350dp"
                android:layout_height="180dp"
                android:layout_marginTop="75dp"
                app:cardCornerRadius="2dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/miniFotoCiudad2"
                    android:layout_width="wrap_content"
                    android:layout_height="170dp"
                    android:src="@drawable/img_ciudad"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.cardview.widget.CardView>


        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/botonInicio"
            android:layout_width="85dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="12dp"
            android:src="@drawable/boton_inicio"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <SearchView
            android:id="@+id/searchView"
            android:layout_width="341dp"
            android:layout_height="84dp"
            android:background="@color/white"
            android:queryHint="Buscar ciudad..."
            android:layout_marginTop="380dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textMasDetalles"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>